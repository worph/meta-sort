    <xs:element name="root">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="fileType" type="xs:string"/>
                <xs:element name="mimeType" type="xs:string"/>
                <xs:element name="byteSize" type="xs:long"/>
            </xs:sequence>
        </xs:complexType>
    </xs:element>

</xs:schema>
